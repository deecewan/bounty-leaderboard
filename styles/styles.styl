darkBG = #333333
darkFG = #666766
lightBG = #8DC641
lightFG = #EEEEEE

@font-face
  font-family Montserrat;
  font-style: normal;
  font-weight: 200
  src: url(../fonts/Montserrat-Hairline.otf) format('otf')

@font-face
  font-family Montserrat;
  font-style: normal;
  font-weight: 400
  src: url(../fonts/Montserrat-Regular.otf.otf) format('otf')

@font-face
  font-family Montserrat;
  font-style: normal;
  font-weight: 500
  src: url(../fonts/Montserrat-SemiBold.otf) format('otf')

@font-face
  font-family Montserrat;
  font-style: normal;
  font-weight: 700
  src: url(../fonts/Montserrat-ExtraBold.otf) format('otf')

body
  background-color darkBG
  font-family Montserrat, Helvetica
  color: darkFG

  .accent
    color lightBG
    font-kerning 1.5

  h1
    color lightFG
    font-family Montserrat, Helvetica
    font-weight: 700

  .header
    text-align center
    img
      width: 30%
    h1
      margin: 0
      margin-bottom 20px
      .accent
        padding: 0 2px 0 4px
  .buttons
    text-align center
    p
      font-size: 20px
      color: lightFG
      margin: .5em 0
    button
      background-color: darkFG
      border none
      color lightBG
      padding: 8px 15px
      margin: 5px
      font-size: 14px
      .sort
        &::after
          background-image: url(../images/up.svg)
          width: 20px
          content: '\00A0' // no-break-space
          display: inline-block;
          background-position: 50%;
          height: 14px
          line-height: 1em;
        &.highLow::after
          background-image: url(../images/down.svg) !important


  .leaderboard
    background-color lightFG
    width: 80%
    margin: 40px auto
    padding: 10px 20px
    -webkit-border-radius: 4px
    -moz-border-radius: 4px
    border-radius: 4px

    .leader
      padding 10px
      border-bottom 1px solid darkFG
      position: relative
      &:last-child {
        border-bottom none;
      }
      display: flex
      justify-content space-around
      align-items center
      align-content center
      .rank
        width: 8%
        display: inline-block
        font-size: 20px

      .details
        padding-left 15px
        width: 92%
        display: inline-block
      .bounties
        text-align center
        position: absolute
        background-color lightBG
        border-radius 50%
        padding: 8px
        width: 20px
        height: 20px
        line-height 20px
        display: inline
        right: 5px
        top 5px